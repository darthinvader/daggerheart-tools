{
  "name": "daggerheart-tools",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "json-server --watch db.json --port 3001",
    "dev:all": "concurrently \"pnpm run dev\" \"pnpm run dev:server\"",
    "build": "tsc -b && vite build",
    "routes:gen": "tsr generate",
    "routes:watch": "tsr watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc -b --noEmit",
    "typecheck": "tsc -b --noEmit",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "preview": "vite preview",
    "preview:build": "tsc -b && vite build && vite preview",
    "prepare": "husky",
    "analyze:bundle": "cross-env ANALYZE=true vite build",
    "analyze:deps": "madge --extensions ts,tsx,js,jsx --warning --circular --summary src",
    "analyze:graph": "madge --extensions ts,tsx,js,jsx --image madge-graph.svg src",
    "analyze:unused": "knip --production",
    "analyze:unused:fix": "knip --production --fix",
    "analyze:exports": "ts-prune -p tsconfig.json",
    "analyze:types": "type-coverage --detail --strict --at-least 90",
    "spell": "cspell lint --cache --no-progress --no-must-find-files \"**/*.{ts,tsx,js,jsx,md,json,yml,yaml,css,scss}\" --exclude \"{node_modules,dist,coverage,**/*.svg,**/*.png,**/*.jpg,**/*.jpeg,**/*.gif,**/*.ico,**/*.pdf,**/*.lock,**/*.html}\"",
    "depcruise": "depcruise --config .dependency-cruiser.cjs --progress --include-only ^src --output-type err src",
    "analyze:size": "pnpm build && size-limit",
    "lint:fast": "oxlint --deny warn --ignore-path .gitignore",
    "size:report": "node ./scripts/size-report.mjs --top=40 --by=size",
    "complexity": "node ./scripts/complexity-report.mjs",
    "complexity:json": "node ./scripts/complexity-report.mjs --json",
    "complexity:worst": "node ./scripts/complexity-report.mjs --min-rank=D --top=30"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.95.3",
    "@tanstack/react-form": "^1.28.0",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-router": "^1.159.4",
    "@tanstack/react-virtual": "^3.13.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.561.0",
    "match-sorter": "^8.2.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "vaul": "^1.1.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@size-limit/file": "^12.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/router-cli": "^1.159.4",
    "@tanstack/router-plugin": "^1.159.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "@vitest/coverage-v8": "4.0.18",
    "babel-plugin-react-compiler": "^1.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "cspell": "^9.6.4",
    "dependency-cruiser": "^17.3.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-unix": "^9.0.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-perfectionist": "^5.5.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-sonarjs": "^3.0.6",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "json-server": "0.17.4",
    "knip": "^5.83.1",
    "lint-staged": "^16.2.7",
    "madge": "^8.0.0",
    "oxlint": "^1.43.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "size-limit": "^12.0.0",
    "tailwindcss": "^4.1.18",
    "terser": "^5.46.0",
    "ts-prune": "^0.10.3",
    "tw-animate-css": "^1.4.0",
    "type-coverage": "^2.29.7",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-plugin-compression2": "^2.4.0",
    "vitest": "^4.0.18"
  },
  "size-limit": [
    {
      "path": "dist/assets/*.js",
      "limit": "500 KB"
    }
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,js,jsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
