{
  "name": "daggerheart-tools",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "preview": "vite preview",
    "prepare": "husky",
    "analyze:bundle": "cross-env ANALYZE=true vite build",
    "analyze:deps": "madge --extensions ts,tsx,js,jsx --warning --circular --summary src",
    "analyze:graph": "madge --extensions ts,tsx,js,jsx --image madge-graph.svg src",
    "analyze:unused": "knip --production",
    "analyze:exports": "ts-prune -p tsconfig.json",
    "analyze:types": "type-coverage --detail --strict --at-least 90",
    "spell": "cspell lint --cache --no-progress --no-must-find-files \"**/*.{ts,tsx,js,jsx,md,json,yml,yaml,css,scss}\" --exclude \"{node_modules,dist,coverage,**/*.svg,**/*.png,**/*.jpg,**/*.jpeg,**/*.gif,**/*.ico,**/*.pdf,**/*.lock,**/*.html}\"",
    "depcruise": "depcruise --config .dependency-cruiser.cjs --progress --include-only ^src --output-type err src",
    "analyze:size": "pnpm build && size-limit",
    "lint:fast": "oxlint --deny warn --ignore-path .gitignore"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-form": "^1.17.0",
    "@tanstack/react-query": "^5.84.1",
    "@tanstack/react-router": "^1.130.12",
    "@tanstack/react-router-devtools": "^1.130.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.536.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.1",
    "@tanstack/router-plugin": "^1.130.15",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "@vitest/coverage-v8": "3.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-unix": "^8.40.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-sonarjs": "^2.0.4",
    "eslint-plugin-unused-imports": "^3.2.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "knip": "^5.38.2",
    "lint-staged": "^16.1.4",
    "madge": "^6.1.0",
    "oxlint": "^0.15.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "cspell": "^8.16.0",
    "dependency-cruiser": "^16.6.0",
    "@size-limit/file": "^11.1.4",
    "size-limit": "^11.1.4",
    "rollup-plugin-visualizer": "^5.12.0",
    "ts-prune": "^0.10.3",
    "tw-animate-css": "^1.3.6",
    "type-coverage": "^2.29.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "size-limit": [
    {
      "path": "dist/assets/*.js",
      "limit": "500 KB"
    }
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,js,jsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
