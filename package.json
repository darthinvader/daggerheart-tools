{
  "name": "daggerheart-tools",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "routes:gen": "tsr generate",
    "routes:watch": "tsr watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "preview": "vite preview",
    "prepare": "husky",
    "analyze:bundle": "cross-env ANALYZE=true vite build",
    "analyze:deps": "madge --extensions ts,tsx,js,jsx --warning --circular --summary src",
    "analyze:graph": "madge --extensions ts,tsx,js,jsx --image madge-graph.svg src",
    "analyze:unused": "knip --production",
    "analyze:exports": "ts-prune -p tsconfig.json",
    "analyze:types": "type-coverage --detail --strict --at-least 90",
    "spell": "cspell lint --cache --no-progress --no-must-find-files \"**/*.{ts,tsx,js,jsx,md,json,yml,yaml,css,scss}\" --exclude \"{node_modules,dist,coverage,**/*.svg,**/*.png,**/*.jpg,**/*.jpeg,**/*.gif,**/*.ico,**/*.pdf,**/*.lock,**/*.html}\"",
    "depcruise": "depcruise --config .dependency-cruiser.cjs --progress --include-only ^src --output-type err src",
    "analyze:size": "pnpm build && size-limit",
    "lint:fast": "oxlint --deny warn --ignore-path .gitignore",
    "size:report": "node ./scripts/size-report.mjs --top=40 --by=size"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-form": "^1.25.0",
    "@tanstack/react-query": "^5.90.10",
    "@tanstack/react-router": "^1.139.3",
    "@tanstack/react-router-devtools": "^1.139.3",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "comlink": "^4.4.2",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "idb-keyval": "^6.2.2",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.554.0",
    "match-sorter": "^8.1.0",
    "react": "^19.2.0",
    "react-day-picker": "^9.11.2",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.1",
    "react-resizable-panels": "^3.0.6",
    "react-responsive": "^10.0.1",
    "recharts": "3.5.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "vaul": "^1.1.2",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.39.1",
    "@size-limit/file": "^11.2.0",
    "@tanstack/react-virtual": "^3.13.12",
    "@tanstack/router-cli": "^1.139.3",
    "@tanstack/router-plugin": "^1.139.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitest/coverage-v8": "3.2.4",
    "cross-env": "^7.0.3",
    "cspell": "^8.19.4",
    "dependency-cruiser": "^16.10.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-unix": "^8.40.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-sonarjs": "^2.0.4",
    "eslint-plugin-unused-imports": "^3.2.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "knip": "^5.70.1",
    "lint-staged": "^16.2.7",
    "madge": "^6.1.0",
    "oxlint": "^0.15.15",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rollup-plugin-visualizer": "^5.14.0",
    "size-limit": "^11.2.0",
    "terser": "^5.44.1",
    "ts-prune": "^0.10.3",
    "tw-animate-css": "^1.4.0",
    "type-coverage": "^2.29.7",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.4",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^3.2.4"
  },
  "size-limit": [
    {
      "path": "dist/assets/*.js",
      "limit": "500 KB"
    }
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,js,jsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
